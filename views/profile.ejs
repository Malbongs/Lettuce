<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js" integrity="sha512-odNmoc1XJy5x1TMVMdC7EMs3IVdItLPlCeL5vSUPN2llYKMJ2eByTTAIiiuqLg+GdNr9hF6z81p27DArRFKT7A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
  <a href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"></a>
</head>

<body>
  <%-include('navbar.ejs') %>
  <!-- 상단부 -->
  <div>
    <img src="<%=data.profile%>" style="width: 200px; height: 200px;">
    <% if (data.isMyprofile == true) { %>
    <form action="/profile/mypage" method="post">
      <button>프로필편집</button>
    </form>
    <% } else if(data.isFollow != 0){%>
    <button onclick="unfollow();">언팔로우</button>
    <% } else { %>
    <button onclick="follow();">팔로우</button>
    <% } %>
    <div id="email"><%=data.email%></div>
    <div id="id" style="display: none;"><%=data.id%></div>
    <div><%=data.nickName %></div>
    <div>
      <div><span>게시물</span><span>1</span></div>
    </div>
    <div>
      <div><span>팔로잉</span><span><%=data.following%></span></div>
    </div>
    <div>
      <div><span>팔로워</span><span><%=data.follower%></span></div>
    </div>
  </div>

  <!-- 게시글 탭 -->
  <div>
    <div><span>🏠</span><span>📚</span></div>
  </div>

  <!-- 게시글 본문 -->
  <div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#followModal" onclick="getFollowList();">
      팔로우 목록
    </button>
  </div>

  <!-- 팔로잉 모달 -->
  <div class="modal" id="followModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>


  <script>
    function getFollowList() {
      var id = $('#id').text();
      var data = {
        id: id
      }
      axios({
          url: "/profile/getFollowList",
          method: "get",
          params: data
        })
        .then((response) => {
          console.log("rd", response.data);
        })
    }

    function follow() {
      var id = $('#id').text();
      var data = {
        id: id
      }
      axios({
          url: "/profile/follow",
          method: "post",
          data: data
        })
        .then((response) => {
          window.location.href = `http://localhost:8000/profile?id=${id}`
        })
    }

    function unfollow() {
      var id = $('#id').text();
      var data = {
        id: id
      }
      console.log(id);
      axios({
          url: "/profile/unfollow",
          method: "post",
          data: data
        })
        .then((response) => {
          window.location.href = `http://localhost:8000/profile?id=${id}`
        })
    }
  </script>
  <script src="../static/js/searchUser.js"></script>
</body>

</html>