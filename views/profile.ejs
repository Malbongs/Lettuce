<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/static/css/profile.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js" integrity="sha512-odNmoc1XJy5x1TMVMdC7EMs3IVdItLPlCeL5vSUPN2llYKMJ2eByTTAIiiuqLg+GdNr9hF6z81p27DArRFKT7A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
  <a href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"></a>
</head>
<style>
  #following img {
    position: absolute;
    width: 30px;
    height: 30px;
    border-radius: 100%;
  }

  #follower img {
    position: absolute;
    width: 30px;
    height: 30px;
    border-radius: 100%;
  }

  .followUser {
    height: 40px;
    display: block;
    margin-top: 10px;
    margin-left: 10px;
    position: relative;
  }

  .userEmail {
    right: 30px;
    position: absolute;
    margin-right: 10px;
    font-family: 'HallymGothic-Regular';
    color: rgb(140, 140, 140);
  }

  .userName {
    left: 100px;
    position: absolute;
    font-family: 'HallymGothic-Regular';
  }
</style>

<body>
  <%-include('navbar.ejs') %>
  <!-- 상단부 -->
  <div class="head-wrap">
    <div class="profileDiv">
      <img id="profilePic" src="<%=data.profile%>">
    </div>
    <div class="infoDiv">
      <div style="display: flex; align-items: center; justify-content: space-around; margin-bottom: 25px;">
        <div id="nickname"><%=data.nickName %></div>
        <% if (data.isMyprofile == true) { %>
        <form action="/profile/mypage" method="post">
          <button id="profileEditBtn">프로필 편집</button>
        </form>
      </div>
      <% } else if(data.isFollow != 0){%>
      <button onclick="unfollow();">언팔로우</button>
      <% } else { %>
      <button onclick="follow();">팔로우</button>
      <% } %>
      <div id="id" style="display: none;"><%=data.id%></div>
      <div style="display: flex; justify-content: space-around; margin-bottom: 25px;">
        <div>
          <div><span>게시물</span><span style="font-weight: bolder;"> 1</span></div>
        </div>
        <div>
          <a href="#" data-bs-toggle="modal" data-bs-target="#followModal" onclick="getFollowList();">
            <div><span>팔로잉</span><span style="font-weight: bolder;"> <%=data.following%></span></div>
          </a>
        </div>
        <div>
          <a href="#" data-bs-toggle="modal" data-bs-target="#followModal" onclick="getFollowList();">
            <div><span>팔로워</span><span style="font-weight: bolder;"> <%=data.follower%></span></div>
          </a>
        </div>
      </div>
      <div id="email"><i class="fa-regular fa-envelope"></i> <%=data.email%></div>
    </div>
  </div>
  <div class="seperator"></div>
  <!-- 게시글 탭  게시글 본문 -->
  <section class="post-area">
    <div class="tabs">
      <div id="line"></div>
      <div id="posts"><i class="fa-regular fa-image"></i> POSTS</div>
      <div id="saved"><i class="fa-regular fa-bookmark"></i> SAVED</div>
    </div>
    <div id="board">
      <h1>게시물</h1>
      <div class="im" style="width: 100px; height: 100px;">
      </div>
    </div>
  </section>

  <!-- 팔로잉 모달 -->
  <div class="modal" id="followModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">팔로우 목록</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="following">
          </div>
          <div id="follower">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" defer src="/static/js/profile.js"></script>
  <script>
    function getFollowList() {
      var id = $('#id').text();
      var followingForm = document.querySelector("#following");
      var followerForm = document.querySelector("#follower");
      var data = {
        id: id
      }
      axios({
          url: "/profile/getFollowList",
          method: "get",
          params: data
        })
        .then((response) => {
          var html = '<div>팔로잉목록</div>';
          for (var i = 0; i < response.data.following.length; i++) {
            html += `<a class="followUser" href="profile?id=${response.data.following[i].id}"><div>
              <img src="${response.data.following[i].profile}" alt="">
              <span class="userName">${response.data.following[i].nickName}</span>
              <span class="userEmail">${response.data.following[i].email}</span>
            </div></a>`;
          }
          followingForm.innerHTML = html;

          var html = '<div>팔로워목록</div>';
          for (var i = 0; i < response.data.follower.length; i++) {
            html += `<a class="followUser" href="profile?id=${response.data.follower[i].id}"><div>
              <img src="${response.data.follower[i].profile}" alt="">
              <span class="userName">${response.data.follower[i].nickName}</span>
              <span class="userEmail">${response.data.follower[i].email}</span>
            </div></a>`;
          }
          followerForm.innerHTML = html;
        })
    }

    function follow() {
      var id = $('#id').text();
      var data = {
        id: id
      }
      console.log(id);
      axios({
          url: "/profile/follow",
          method: "post",
          data: data
        })
        .then((response) => {
          window.location.href = `http://localhost:8000/profile?id=${id}`
        })
    }

    function unfollow() {
      var id = $('#id').text();
      var data = {
        id: id
      }
      console.log(id);
      axios({
          url: "/profile/unfollow",
          method: "post",
          data: data
        })
        .then((response) => {
          window.location.href = `http://localhost:8000/profile?id=${id}`
        })
    }

    window.onload = function() {

      axios({
          url: "/profile/inpost",
          method: "get"

        })
        .then((response) => {
          var img = ``
          for (let i = 0; i < response.data.length; i++) {
            img += `<img src ="${response.data[i]["Postmedia.src"]}" >`

          }
          $(".im").append(img);
          console.log(response.data);
        })

    }
  </script>
  <script src="../static/js/searchUser.js"></script>
</body>

</html>