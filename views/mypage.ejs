<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js" integrity="sha512-odNmoc1XJy5x1TMVMdC7EMs3IVdItLPlCeL5vSUPN2llYKMJ2eByTTAIiiuqLg+GdNr9hF6z81p27DArRFKT7A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
</head>

<body>
  <form>
    <img id="profile_img" src="<%=data.profile%> " style="width: 200px; height: 200px;"><br>
    <button type="button" id="uploadBtn" onclick="img_load();">프로필 사진 변경하기</button><br>
    <input style="display: none;" type="file" name="userfile" id="file_upload" onchange="fileUpload();">
    이름<input type="text" name="name" value="<%=data.nickName %>"><br>
    소개<input type="text" name="comment" value="<%=data.comment %>"><br>
    생년월일<input type="date" name="birth" value="<%=data.birthday %>"><br>
    이메일<input type="text" name="email" value="<%=data.email %>" disabled><br>
    <button type="button" onclick="updateUser();">제출</button>
    <button type="button" onclick="deleteUser();">회원탈퇴</button>
  </form>

  <script>
    function updateUser() {
      var form = document.querySelector("form");
      var data = {
        name: form.name.value,
        comment: form.comment.value,
        birthday: form.birth.value
      }

      axios({
        url: "/mypage/update",
        method: "post",
        data: data
      }).then((response) => {
        console.log(response);
        alert("프로필 업데이트 완료");
        $('input[name=name').attr('value', response.data.name);
        $('input[name=comment').attr('value', response.data.comment);
        $('input[name=birthday').attr('value', response.data.birthday);
      })
    }

    function img_load() {
      $("#file_upload").click();
    }

    function fileUpload() {
      const formData = new FormData(); // 파일 담아 전달할 form 생성
      const file = document.getElementById("file_upload");
      formData.append("userfile", file.files[0]); // 전달할 파일 form에 추가
      axios({
        headers: {
          "Content-Type": "multipart/form-data",
        },
        url: "/mypage/fileupload",
        method: "post",
        data: formData // formData 전송
      }).then((response) => {
        var img_url = response.data.path;
        $("#profile_img").attr("src", img_url);
      })
    }

    function deleteUser() {
      axios({
        url: "/deleteUser",
        method: "post",
      }).then((response) => {
        alert("삭제가 완료되었습니다.");
        location.href = "/"
      })
    }
  </script>
</body>

</html>