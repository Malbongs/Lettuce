<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/static/css/mypage.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js" integrity="sha512-odNmoc1XJy5x1TMVMdC7EMs3IVdItLPlCeL5vSUPN2llYKMJ2eByTTAIiiuqLg+GdNr9hF6z81p27DArRFKT7A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
</head>

<body>
  <%-include('navbar.ejs') %>
  <div class="wrap">
    <form id="updateForm">
      <div style="display: flex;">
        <div><img id="profile_img" src="<%=data.profile%>"></div>
        <div>
          <div><%=data.nickName%></div>
          <button type="button" id="uploadBtn" onclick="img_load();">프로필 사진 변경하기</button><br>
        </div>
      </div>
      <input style="display: none;" type="file" name="userfile" id="file_upload" onchange="fileUpload()" accept="image/gif,image/jpeg,image/png,image/jpg">
      이름<input type="text" name="name" value="<%=data.nickName %>"><br>
      소개<input type="text" name="comment" value="<%=data.comment %>"><br>
      생년월일<input type="date" name="birth" value="<%=data.birthday %>"><br>
      이메일<input type="text" name="email" value="<%=data.email %>" disabled><br>
      변경비밀번호<input class="pwInput" name="password" id="check1" type="password" placeholder="  비밀번호를 입력하세요" required><br>
      변경비밀번호확인<input class="pwInput" name="passwordCheck" id="check2" type="password" placeholder="  비밀번호를 한번 더 입력해 주세요" oninput="checkPw();" required><br>
      <input id="originalPw" type="password" value="<%=data.password%>" style="display: none;">
      <div id="checkMsg"></div>
  
      <button id="submitBtn" type="button" onclick="updateUser();">제출</button>
      <button type="button" onclick="deleteUser();">회원탈퇴</button>
    </form>
  </div>
  <%-include('footer.ejs') %>

  <script>
    function checkPw() {
      var pw1 = $('#check1').val();
      var pw2 = $('#check2').val();
      console.log(pw1);
      console.log(pw2);
      var msg = $('#checkMsg');

      if (pw1 == pw2) {
        msg.text('비밀번호가 일치합니다.');
        $('#submitBtn').prop("disabled", false);
      } else {
        msg.text('비밀번호가 일치하지않습니다.');
        $('#submitBtn').prop("disabled", true);
      }
    }

    function updateUser() {
      var form = document.getElementById('updateForm');
      var data = {
        name: form.name.value,
        comment: form.comment.value,
        birthday: form.birth.value,
        password: form.passwordCheck.value
      }
      console.log("data", data);

      axios({
        url: "/profile/mypage/update",
        method: "post",
        data: data
      }).then((response) => {
        console.log(response);
        alert("프로필 업데이트 완료");
        $('input[name=name').attr('value', response.data.name);
        $('input[name=comment').attr('value', response.data.comment);
        $('input[name=birthday').attr('value', response.data.birthday);

      })
    }

    function img_load() {
      $("#file_upload").click();
    }

    function fileUpload() {
      const formData = new FormData(); // 파일 담아 전달할 form 생성
      const file = document.getElementById("file_upload");
      formData.append("userfile", file.files[0]); // 전달할 파일 form에 추가
      axios({
        headers: {
          "Content-Type": "multipart/form-data",
        },
        url: "/profile/mypage/fileupload",
        method: "post",
        data: formData // formData 전송
      }).then((response) => {
        var img_url = response.data.path;
        $("#profile_img").attr("src", '/' + img_url);
      })
    }

    function deleteUser() {
      axios({
        url: "/profile/deleteUser",
        method: "post",
      }).then((response) => {
        alert("삭제가 완료되었습니다.");
        location.href = "/"
      })
    }
  </script>

  <script src="../static/js/searchUser.js"></script>
</body>

</html>